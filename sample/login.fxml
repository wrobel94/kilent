<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <children>
      <Button fx:id="loginButton" disable="true" mnemonicParsing="false" onMouseClicked="#login" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="makeConnectionButton" mnemonicParsing="false" onMouseClicked="#makeConnection" text="MakeConnection" GridPane.rowIndex="4" />
      <Label fx:id="connectedLabel" GridPane.rowIndex="3" />
      <TextField fx:id="userNameTextField" promptText="User Name" text="Przykladowy nick" GridPane.rowIndex="2" />
      <Label fx:id="loginLabel" text="isLogged" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="port" promptText="Port" text="65432" GridPane.rowIndex="1" />
      <TextField fx:id="server" promptText="Server" text="localhost" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
